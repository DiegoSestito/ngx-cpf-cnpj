{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "ncc",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "ncc",
      "kebab-case"
    ]
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true
  }
}
